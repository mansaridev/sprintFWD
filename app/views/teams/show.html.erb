<div class="container my-5 py-4 bg-light rounded shadow">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><%= @team.name %></h1>
    <div class="d-flex">
      <%= link_to "Edit Team", edit_team_path(@team), class: "btn btn-primary mr-2" %>
      <%= link_to "Add Members", new_team_member_path(@team), class: "btn btn-primary mr-2" %>
      <%= button_to "Delete Team", team_path(@team), method: :delete, data: { "turbo-confirm": "Are you sure you want to delete this project?" }, class: "btn btn-danger" %>
  </div>
  </div>
  <div class="table-responsive">
  <table class="table table-striped">
  <thead>
    <tr class="table-secondary">
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Country</th>
      <th scope="col">Show</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @team.members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.city %></td>
        <td><%= member.state %></td>
        <td><%= member.country %></td>
        <td><%= link_to "Show", member_path(member), class: "btn btn-primary mr-2" %></td>
        <td><%= button_to "Delete", member_path(member), method: :delete, data: { "turbo-confirm": "Are you sure you want to delete this Member?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

